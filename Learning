<html>
<head>
    <title>JavaScript Features</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .dropdown {
            width: 200px;
        }
        .info {
            margin-top: 20px;
            border: 1px solid #ccc;
            padding: 10px;
            display: none;
        }
    </style>
</head>
<body>
    <h1>JavaScript Features</h1>

    <label for="dropdown">Select a feature:</label>
    <select id="dropdown" class="dropdown">
        <option value="">--Select a feature--</option>
        <option value="feature1">Feature 1</option>
        <option value="feature2">Feature 2</option>
        <option value="feature3">Feature 3</option>
    </select>

    <div id="feature1" class="info">
        <h2>Feature 1</h2>
        <p>This is the information about feature 1.</p>
    </div>

    <div id="feature2" class="info">
        <h2>Feature 2</h2>
        <p>This is the information about feature 2.</p>
    </div>

    <div id="feature3" class="info">
        <h2>Feature 3</h2>
        <p>This is the information about feature 3.</p>
    </div>

    <script>
        document.getElementById('dropdown').addEventListener('change', function() {
            var value = this.value;
            var infos = document.getElementsByClassName('info');

            for (var i = 0; i < infos.length; i++) {
                infos[i].style.display = 'none';
            }

            if (value) {
                document.getElementById(value).style.display = 'block';
            }
        });
    </script>
